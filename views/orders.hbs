<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Đơn hàng của tôi</h2>
        <a href="/home" class="btn btn-outline-secondary btn-sm">Tiếp tục mua sắm</a>
    </div>

    {{#if orders.length}}
    {{#each orders}}
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <div class="small text-muted">Mã đơn: {{_id}}</div>
                <div class="small">Ngày đặt: {{formatDate createdAt}}</div>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="badge bg-primary">{{status}}</span>
                <span class="fw-bold text-primary">{{formatPrice total}}</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th style="width:160px;" class="text-end">Đơn giá</th>
                            <th style="width:120px;" class="text-center">SL</th>
                            <th style="width:160px;" class="text-end">Tạm tính</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                        <tr>
                            <td>{{name}}</td>
                            <td class="text-end">{{formatPrice price}}</td>
                            <td class="text-center">{{quantity}}</td>
                            <td class="text-end">{{formatPrice subtotal}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
    <a href="/home" class="btn btn-primary">Mua sắm ngay</a>
    {{/if}}
</div>